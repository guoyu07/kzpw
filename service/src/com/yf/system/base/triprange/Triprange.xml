  <insert id="createTriprange" parameterClass="Triprange">
    insert into T_TRIPRANGE ( 
    	ID,
	  			C_TRIPLINEID,
	  			C_NAME,
	  			C_CREATEUSER,
	  			C_CREATETIME,
	  			C_MODIFYUSER,
