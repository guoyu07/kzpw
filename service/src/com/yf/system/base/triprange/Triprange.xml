  <select id="findTriprange" parameterClass="long" resultClass="Triprange">
    select 
    	ID as id,
	  			C_TRIPLINEID as triplineid,
	  			C_NAME as name,
	  			C_CREATEUSER as createuser,
	  			C_CREATETIME as createtime,
	  			C_MODIFYUSER as modifyuser,
